{% extends 'base.html.twig' %}

{% block title %}Cloudinary content{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <style>
        html {
            height:100%;
            background:url(https://www.engagewp.com/wp-content/uploads/2014/06/preloader.gif) center no-repeat;
        }
        img {
            max-width:100%;
        }
        body {
            height:100%;
            background:white;
            opacity:0;
            transition:0.5s
        }
    </style>
{% endblock %}
{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">

                <table id="table_id" class="display" style="width:100%">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Format</th>
                        <th>Resource type</th>
                        <th>Created at</th>
                        <th>Size</th>
                        <th>Width</th>
                        <th>Height</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in content %}
                    <tr>
                        <td>
                            <a href="{{ path('content_item',{'type':item.resource_type,'id':item.public_id|id_format(2, ',', '.'),'format':item.format}) }}">
                                {{ item.public_id }}
                            </a>
                        </td>
                        <td>{{ item.format }}</td>
                        <td>{{ item.resource_type }}</td>
                        <td>{{ item.created_at }}</td>
                        <td>{{ item.bytes }} bytes</td>
                        <td>{{ item.width }}</td>
                        <td>{{ item.height }}</td>
                    </tr>
                    {%  endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Format</th>
                        <th>Resource type</th>
                        <th>Created at</th>
                        <th>Size</th>
                        <th>Width</th>
                        <th>Height</th>
                    </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
    <script>
        window.onload= function() {
            document.body.style.opacity="1"
        };
        $(document).ready( function () {
            $('#table_id').DataTable();
        } );
    </script>
{% endblock %}
