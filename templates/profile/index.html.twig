{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <h2>{{ user.username }}</h2>
        <p class="pull-right"><a href="{{ path('update_profile',{'id':app.user.id}) }}">Edit</a></p>
        <table class="table">
            <tbody>
            <tr>
                <td>Email: </td>
                <td>{{ user.email }}</td>
            </tr>

            </tbody>
        </table>
    </div>
    </div>
</div>
{% endblock %}
