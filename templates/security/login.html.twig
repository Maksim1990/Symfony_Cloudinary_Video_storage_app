{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .error {color:red;}
</style>

<div class="example-wrapper">
    <h1>LOGIN PAGE</h1>


    {% if error %}
        <span class="error">{{ error.messageKey }}</span>
    {% endif %}
    <form action="{{ path('login') }}" method="POST">
        <input type="text" name="_username" class="form-control" value="{{ last_username }}" placeholder="User name ....">
        <input type="password" name="_password" class="form-control">

        <button type="submit" class="btn form-control btn-login btn-success">Login</button>
    </form>
</div>
{% endblock %}
